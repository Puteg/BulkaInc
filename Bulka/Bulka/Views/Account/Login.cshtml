@using Bulka.Models
@model LoginViewModel
@{
    ViewBag.Title = "Добро пожаловать";
    Layout = null;
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/nprogress.css" rel="stylesheet" />
    <link href="~/Libs/Gentelella/css/custom.min.css" rel="stylesheet"/>
</head>

<body class="login">
    <div>
        <div class="login_wrapper">
            <div class="animate form login_form">
                <section class="login_content">
                    @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { role = "form" }))
                    {
                        <h1> Добро пожаловать </h1>
                        
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            <div>
                                @Html.TextBoxFor(m => m.Name, new { placeholder = "E-mail", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                            </div>
                        </div>
                        <div class="form-group">
                            <div>
                                @Html.PasswordFor(m => m.Password, new { placeholder = "Пароль", @class = "form-control" })
                                @Html.ValidationMessageFor(m => m.Password, "", new {@class = "text-danger"})
                            </div>
                        </div>
                        <div>
                            <button class="btn btn-default" type="submit">Войти</button>
                            @*@Html.ActionLink(" Забыли пароль? ", "ForgotPassword")*@
                        </div>

                    }
                    <div class="clearfix"></div>

                    <div class="separator">
                        <p class="change_link">
                            В первый раз?
                            @Html.ActionLink(" Регистрация ", "Register")
                        </p>
                    </div>
                </section>
            </div>
        </div>
    </div>
</body>