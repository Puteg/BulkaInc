@model Bulka.Models.RegisterViewModel
@{
    ViewBag.Title = "Регистрация";
    Layout = null;
}

<head>
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <!-- Meta, title, CSS, favicons, etc. -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/nprogress.css" rel="stylesheet" />
    <link href="~/Libs/Gentelella/css/custom.min.css" rel="stylesheet" />
</head>


<body class="login">
<div>
    <div class="login_wrapper">
        <div id="register" class="animate form">
            <section class="login_content">
                @using (Html.BeginForm("Register", "Account", FormMethod.Post, new {role = "form"}))
                {
                    <h1> Регистрация </h1>

                    @Html.AntiForgeryToken()
                    @Html.ValidationSummary("", new { @class = "text-danger" })
                    <div class="form-group">
                        <div class="">
                            @Html.TextBoxFor(m => m.Name, new {placeholder = "Имя", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            @Html.TextBoxFor(m => m.Email, new {placeholder = "E-mail", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            @Html.TextBoxFor(m => m.Phone, new {placeholder = "Телефон", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            @Html.PasswordFor(m => m.Password, new {placeholder = "Пароль", @class = "form-control"})
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="">
                            @Html.PasswordFor(m => m.ConfirmPassword, new {placeholder = "Повторите пароль", @class = "form-control"})
                        </div>
                    </div>
                    <div>
                        <button class="btn btn-default" type="submit">Зарегистрировать</button>
                    </div>

                }
                <div class="clearfix"></div>

                <div class="separator">
                    <p class="change_link">
                        Уже зарегистрирован?
                        @Html.ActionLink(" Войти ", "Login")
                    </p>
                </div>
            </section>
        </div>
    </div>
</div>
</body>
