@model Bulka.Controllers.PaymentsViewModel

<div class="x_panel">
    <div class="x_title">
        <h2>
            Список переводов
        </h2>
        <ul class="nav navbar-right panel_toolbox">
            <li>
                <a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li>
                <a class="close-link"><i class="fa fa-close"></i></a>
            </li>
        </ul>
        <div class="clearfix"></div>
    </div>
    <div class="x_content">
        <div class="row">
            <table class="table display table-hover">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Дата</th>
                    <th>Сумма</th>
                    <th>Отправитель</th>
                    <th>Получатель</th>
                    <th>Действия</th>
                </tr>
                </thead>
                <tbody>
                @foreach (var item in Model.Items)
                {
                    <tr data-id="@item.Id">
                        <td>@item.Id</td>
                        <td>@item.DateTime</td>
                        <td>@item.Amount</td>
                        <td>@item.Sender</td>
                        <td>@item.Recipient</td>
                        <td>
                            <a href="@Url.Action("Edit", "Payment", new {id = item.Id})" class=""> Открыть </a>
                        </td>
                    </tr>
                }
                </tbody>
            </table>
        </div>
    </div>
</div>